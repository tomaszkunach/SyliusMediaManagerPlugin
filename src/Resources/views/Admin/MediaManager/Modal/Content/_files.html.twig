{% from '@SyliusAdmin/shared/helper/icon.html.twig' import icon %}

<div class="conatiner">
    {% for file in files %}
        {% set fileIcon = file.isDir ? 'history' : file.isImage ? 'success' : file.isVideo ? 'video' : file.isPdf ? 'pencil' : file.isFavicon ? 'success' : file.isAudio ? 'music' : file.isFile ? 'cube' : 'question' %}
        <div class="d-flex flex-row">
            {{ icon({ icon: fileIcon, class: 'icon' }) }}
            <div class="monsieurbiz-sylius-file-manager__item d-flex flex-grow-1 flex-fill"
            {%- if file.isDir -%}onclick="monsieurbizSyliusMediaManagerDisplayPath('{{ inputName | escape('js') }}', '{{ folder | escape('js')}}', '{{ file.path | escape('js')}}');"{%- endif -%}
            {%- if file.isFile -%}onclick="monsieurbizSyliusMediaManagerConfirmFile('{{ inputName | escape('js') }}', '{{ folder | escape('js')}}', '{{ file.path | escape('js')}}');"{%- endif -%}
        >
                <div class="{{ file.isDir ? 'header' : file.isFile ? 'description' : 'description' }}">
                    {{ file.name }}
                </div>
            </div>
            <div class="d-flex align-self-start" style="width:24px; height: 24px">
                {% include '@MonsieurBizSyliusMediaManagerPlugin/Admin/MediaManager/Modal/Content/Files/_previewFile.html.twig' %}
            </div>
            <div class="d-flex align-self-start">
                {% include '@MonsieurBizSyliusMediaManagerPlugin/Admin/MediaManager/Modal/Content/Files/_deleteFile.html.twig' %}
            </div>
        </div>
    {% endfor %}
</div>
